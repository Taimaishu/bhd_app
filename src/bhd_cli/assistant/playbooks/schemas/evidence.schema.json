{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EvidencePlan",
  "type": "object",
  "required": [
    "id",
    "playbook_id",
    "evidence_items"
  ],
  "properties": {
    "id": { "type": "string" },
    "playbook_id": { "type": "string" },
    "evidence_items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "description"],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "request_response_pair",
              "screenshot",
              "configuration_snapshot",
              "banner_capture",
              "network_trace",
              "log_entry",
              "metadata",
              "other"
            ]
          },
          "description": { "type": "string" },
          "required": { "type": "boolean", "default": true }
        }
      }
    }
  }
}
