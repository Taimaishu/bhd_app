{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hypothesis",
  "type": "object",
  "required": [
    "id",
    "related_observations",
    "title",
    "description",
    "risk_tags",
    "confidence",
    "rationale"
  ],
  "properties": {
    "id": { "type": "string" },
    "related_observations": {
      "type": "array",
      "items": { "type": "string" }
    },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "risk_tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "rationale": {
      "type": "string",
      "description": "Why this hypothesis was formed based on observations"
    },
    "requires_validation": {
      "type": "boolean",
      "default": true
    }
  }
}
